                                        <div class="hover">
                                            <button class="btn btn-red">Xem chi tiết <i class="fa fa-angle-double-right"></i></button>
                                        </div>
                                    </a>
                                </div>*@
                            <div class="san_pham">
                                <a class="image" href="@item.MenuAlias/@item.PojectID/@item.Alias">
                                    <img src="@item.Image" style="height:250px">
